<scroll-view class="container">
  <view class="header">
    <text>翻译历史</text>
    <text class="iconfont icon-close" bindtap="clearHistory">清除历史记录</text>
  </view>
  <view class="list">
    <view class="item" wx:for="{{history}}" wx:key="this">
      <view>{{item.source}}</view>
      <view>{{item.result}}</view>
    </view>
  </view>
</scroll-view>